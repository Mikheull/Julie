<!doctype html>
<html lang="fr">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style2.css">
    <link rel ="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Résultats</title>
  </head>
  <body>
                 

<div class="page-wrapper chiller-theme toggled">
 
        <nav id="sidebar" class="sidebar-wrapper">
          <form method="post">
          <div class="sidebar-content">
            
      
            <div class="sidebar-search">
              <div>
                <div class="input-group">
                    <div class="input-group-append">
                        <span class="input-group-text">
                          <i class="fa fa-search" aria-hidden="true"></i>
                        </span>
                      </div>
                  <input type="text" name="query"  class="form-control search-menu" placeholder="Rechercher">
                </div>
              </div>
            </div>
            <div class="sidebar-search">
                <div>
                  <div class="input-group">
                      <div class="input-group-append">
                          <span class="input-group-text">
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                          </span>
                        </div>
                    <input type="date" name="date" class="form-control search-menu" placeholder="Date">
                  </div>
                </div>
              </div>
      
                  <div class="sidebar-search">
                      <div>
                        <div class="input-group">
                            <select name="arrondissement" class="form-control" id="exampleFormControlSelect1">
                                <option value="" selected disabled>Arrondissement</option>
                                <option value="75001">1er</option>
                                <option value ="75002">2e</option>
                                <option value ="75003">3e</option>
                                <option value ="75004">4e</option>
                                <option value ="75005">5e</option>
                                <option value ="75006">6e</option>
                                <option value ="75007">7e</option>
                                <option value ="75008">8e</option>
                                <option value ="75009">9e</option>
                                <option value ="75010">10e</option>
                                <option value ="75011">11e</option>
                                <option value ="75012">12e</option>
                                <option value ="75013">13e</option>
                                <option value ="75014">14e</option>
                                <option value ="75015">15e</option>
                                <option value ="75016">16e</option>
                                <option value ="75017">17e</option>
                                <option value ="75018">18e</option>
                                <option value ="75019">19e</option>
                                <option value ="75020">20e</option>
                              </select>
                        </div>
                      </div>
                    </div>
                    <div class="sidebar-search">
                        <div>
                          <div class="input-group">
                              <select name="price_type" class="form-control" id="exampleFormControlSelect1">
                                  <option value="" selected disabled>Prix</option>
                                  <option value="gratuit">Gratuit</option>
                                  <option value="payant">Payant</option>
                                </select>
                          </div>
                        </div>
                      </div>
                <div class="sidebar-search">
                    <div>
                      <div class="input-group">
                          <select name="access_type" class="form-control" id="exampleFormControlSelect1">
                              <option value="" selected disabled>Type d'accès</option>
                              <option value="conseillee">Conseillée</option>
                              <option value="libre">Libre</option>
                              <option value="inscription">Inscription</option>
                              <option value="reservation">Réservation</option>
                            </select>
                        
                      </div>
                    </div>
                  </div>
                  <div class="sidebar-search">
                      <div>
                        <div class="input-group">
                            <div class="custom-control custom-switch">
                                <input name="access_pmr" type="checkbox" class="custom-control-input" id="customSwitch1">
                                <label class="custom-control-label" for="customSwitch1" style="color:white;">Accès PMR</label>
                              </div>
                        </div>
                      </div>
                    </div>
                    <div class="sidebar-search">
                        <div>
                          <div class="input-group">
                              <div class="custom-control custom-switch">
                                  <input name="access_malvoyant" type="checkbox" class="custom-control-input" id="customSwitch2">
                                  <label class="custom-control-label" for="customSwitch2" style="color:white;">Malvoyant</label>
                                </div>
                          </div>
                        </div>
                      </div>
                      <div class="sidebar-search">
                          <div>
                            <div class="input-group">
                                <div class="custom-control custom-switch">
                                    <input name="access_malentendant" type="checkbox" class="custom-control-input" id="customSwitch3">
                                    <label class="custom-control-label" for="customSwitch3" style="color:white;">Malentendant</label>
                                  </div>
                            </div>
                          </div>
                        </div>
                        <div class="sidebar-search">
                            <div>
                              <div class="input-group">               
                                <input type="submit" id="confirm_filter" class="form-control search-menu button_filtre" placeholder="Rechercher">
                              </div>
                            </div>
                          </div>
        
          </div>
        </form>
      
        </nav>
        <!-- sidebar-wrapper  -->
        <main class="page-content">
            
                <% if (result !== 'null') { %>

                    <% result.records.forEach(function(event) { %>
                        <div class="row titleEvent">
                            <span><%= event.fields.title %></span> <br>
                        </div>
                        <div class="row">
                                <div class="col-sm-8 antiP"><%- event.fields.description.substring(0, 500) %></div> <br>
                                <div class="col-sm-4"><img src="<%= event.fields.cover_url %>" alt="<%= event.fields.cover_alt %>"  height="200px"></div>

                        </div>
                        <div class="row">
                                <div class="col-sm-5">
                                        <span class="titleBold">Date de début</span></br><%= event.fields.date_start %> </br>
                                    <span class="titleBold">Date de fin</span></br><%= event.fields.date_end %></br>
                                    <span class="titleBold">Nom du lieu :</span></br>  <%= event.fields.address_street %> </br>
                                    <span class="titleBold">Malvoyant:</span></br>  <%= event.fields.blind %> </br>
                                    <span class="titleBold">Personne à mobilité réduite :</span></br>  <%= event.fields.pmr %> </br>
                                    <span class="titleBold">Personne malentendante :</span></br>  <%= event.fields.deaf %> </br>
                                    <span class="titleBold">Adresse :</span></br>  <%= event.fields.address_street %> </br>
                                    <span class="titleBold">Téléphone :</span></br>  <%= event.fields.contact_phone %> </br>
                                    <span class="titleBold">Url : </span></br>  <span class="url"><%= event.fields.url %></span>
                                </div>
                          
                                <div class="col-sm-5">                   
                                 <iframe 
                                 width="500" 
                                 height="400" 
                                 frameborder="0" 
                                 marginheight="0" 
                                 marginwidth="0" 
                                 src="https://maps.google.com/maps?q=<%= event.fields.lat_lon[0] %>,<%= event.fields.lat_lon[1] %>&hl=es;z=14&amp;output=embed"
                             >
                             </iframe>
                            </div>   
                        </div>
                    <% }); %>
                    
                <% } %>
            
        </main>
        <!-- page-content" -->
      </div>
      <!-- page-wrapper -->
            
      
      
      
          <!-- Optional JavaScript -->
          <!-- jQuery first, then Popper.js, then Bootstrap JS -->
          <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
          <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
          <!-- <script type="text/javascript" src="/socket.io/socket.io.js"></script>
          <script type="text/javascript" src="/javascript/socket.js"></script> -->
    </body>
</html>
